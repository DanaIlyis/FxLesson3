    <children>
        <Label id="registrationLabel" layoutX="77.0" layoutY="18.0" prefHeight="60.0" prefWidth="284.0" text="Registration Page" textFill="RED">
            <font>
                <Font name="System Bold Italic" size="28.0" />
            </font>
        </Label>
        <TextField id="nameTextField" fx:id="nameTextField" layoutX="63.0" layoutY="89.0" prefHeight="25.0" prefWidth="237.0" promptText="enter name" />
        <TextField id="surnameTextField" fx:id="surnameTextField" layoutX="61.0" layoutY="123.0" prefHeight="25.0" prefWidth="237.0" promptText="enter surname" />
        <TextField id="groupTextField" fx:id="groupTextField" layoutX="59.0" layoutY="157.0" prefHeight="25.0" prefWidth="237.0" promptText="enter group" />
        <TextField id="classroomTextField" fx:id="classroomTextField" layoutX="57.0" layoutY="189.0" prefHeight="25.0" prefWidth="237.0" promptText="enter classroom" />
        <TextField id="emailTextField" fx:id="emailTextField" layoutX="58.0" layoutY="222.0" prefHeight="25.0" prefWidth="237.0" promptText="enter email" />
        <TextField id="phonenumberTextField" fx:id="phonenumberTextField" layoutX="57.0" layoutY="257.0" prefHeight="25.0" prefWidth="237.0" promptText="enter phone number" />
